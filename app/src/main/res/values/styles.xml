<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="splash_text_style">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/splash_text_size</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>

    </style>


    <style name="tag_style">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/tag_size</item>
        <item name="android:fontFamily">@font/maiden_orange</item>
    </style>

    <style name="recycler_view_title_style">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/card_view_title_size</item>
        <item name="android:fontFamily">@font/maiden_orange</item>
    </style>

    <style name="recycler_view_abilities_style">
        <item name="android:textColor">@color/darkerGray</item>
        <item name="android:textSize">@dimen/card_view_abilities_size</item>
        <item name="android:fontFamily">@font/maiden_orange</item>
    </style>

</resources>
